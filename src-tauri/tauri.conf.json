{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "BONZO DevAssist",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": ["**"]
      },
      "shell": {
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://api.openai.com/*", "https://api.anthropic.com/*"]
      }
    },
    "windows": [
      {
        "title": "BONZO DevAssist AI",
        "width": 1600,
        "height": 900,
        "minWidth": 1280,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
